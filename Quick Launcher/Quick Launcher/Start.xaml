<Window x:Class="Quick_Launcher.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quick_Launcher"
        mc:Ignorable="d"
        Title="Quick Launcher - Starting" Height="300" Width="800" ResizeMode="NoResize" WindowStyle="None" Background="Black" WindowStartupLocation="CenterScreen" Icon="src/ico.ico" MouseDown="Window_MouseDown">
    <Grid>
        <Label Content="Quick Launcher" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="72"/>
        <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" FontSize="18" Width="800" Background="#FF1E1E1E"/>
        <Label x:Name="lb_stat" Content="" HorizontalAlignment="Right" Margin="0,0,110,39" VerticalAlignment="Bottom" Width="680" Foreground="White" Height="53" FontSize="18"/>
        <MediaElement x:Name="loadAnim" Source="src\loading.gif" Margin="0,0,5,39" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</Window>
