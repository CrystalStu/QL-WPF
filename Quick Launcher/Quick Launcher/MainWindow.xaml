<Window x:Class="Quick_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quick_Launcher"
        mc:Ignorable="d"
        Title="Quick Launcher" Style="{DynamicResource WindowStyle}" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="src/Background.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="  Qucik Launcher" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" Background="#FFF0EAF9" Foreground="Black" Width="1920" FontWeight="Medium"/>
        <Grid Grid.Row="1">
            <Button Content="About" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="Button_Click" Style="{DynamicResource BaseButton}" FontSize="16" Margin="10,10,0,0"/>
        </Grid>

    </Grid>
</Window>
